    private void OnAddCategory()
    {
        isCategoryEditMode = false;
        selectedCategory = null;
        showCategoryModal = true;
        StateHasChanged();
    }

    private void OnEditCategory(Category category)
    {
        isCategoryEditMode = true;
        selectedCategory = category;
        showCategoryModal = true;
        StateHasChanged();
    }

    private void OnDeleteCategory(Category category)
    {
        CategoryRepo.Remove(category);
        LoadData();
        StateHasChanged();
        Console.WriteLine($"Category deleted: {category.Name}");
    }

    private void SaveCategory()
    {
        if (categoryModal == null) return;

        var name = categoryModal.GetCategoryName();
        var description = categoryModal.GetDescription();

        if (isCategoryEditMode && selectedCategory != null)
        {
            // Update existing category
            selectedCategory.Name = name;
            selectedCategory.Description = description;
            CategoryRepo.Update(selectedCategory);
            Console.WriteLine($"Category updated: {name}");
        }
        else
        {
            // Create new category
            var category = new Category(name, description);
            CategoryRepo.Add(category);
            Console.WriteLine($"Category added: {name}");
        }

        LoadData();
        CloseCategoryModal();
    }

    private void CloseCategoryModal()
    {
        showCategoryModal = false;
        selectedCategory = null;
        StateHasChanged();
    }

