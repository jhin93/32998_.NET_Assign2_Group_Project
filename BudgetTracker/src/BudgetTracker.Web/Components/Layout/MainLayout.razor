@inherits LayoutComponentBase

<style>
    body {
        margin: 0;
        padding: 0;
    }

    .page {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .page > main {
        flex: 1;
    }

    .content {
        padding: 0 !important;
    }

    .top-row {
        display: none;
    }

    .sidebar {
        display: none;
    }
</style>

<div class="page">
    <main>
        <article class="content">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
